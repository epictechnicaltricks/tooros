<!--            android:gravity="center"-->
<!--            android:hint="9:00 AM"-->
<!--            android:textColor="#fff" />-->

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:id="@+id/invoicedownload"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Invoice"
                android:textSize="15sp"
                android:background="@drawable/redbutton"
                android:drawableLeft="@drawable/ic_file_download"/>

            <Button
                android:visibility="gone"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:id="@+id/extend"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="  Extend Booking"
                android:textSize="15sp"
                android:background="@drawable/redbutton3"
                android:drawableLeft="@drawable/plus_fff"/>

